{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Raylib ATM App",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "main.cpp",
                "TaiKhoan.h",
                "admin.h",
                "chuTro.h",
                "dkchutro.h",
                "PhongTro.h",
                "QuanLy.h",
                "hinhAnh.h",
                "timkiem.h",
                "nguoithue.h",
                "dkthuephong.h",
                "QuanLyNguoiThue.h",
                "vector.h",
                "-o",
                "main.exe",
                "-I.",
                "-L./raylib-5.5_win64_mingw-w64/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-std=c++17",
                "-O2",
                "-Wall",
                "-Wno-enum-compare"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Raylib ATM project with g++"
        }
    ]
}
